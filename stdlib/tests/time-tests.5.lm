module time-test


native var Int time-value


test test-clock()
    assert! time.clock() = 12300
    assert! time.CLOCKS-PER-SEC = 100


test test-ctime()
    var time.Timer timer
    time-value := 1234
    timer.time()
    var String{256} result
    timer.ctime(user result)!
    assert! result.equal(user "good")


test test-difftime()
    var time.Timer timer1
    time-value := 1000
    timer1.time()
    var time.Timer timer2
    time-value := 1200
    timer2.time()
    assert! time.difftime(user timer1, user timer2) = 200


func set-time(user time.Time tm)
    tm.set-sec(copy 43)
    tm.set-min(copy 54)
    tm.set-hour(copy 21)
    tm.set-mday(copy 28)
    tm.set-mon(copy 11)
    tm.set-year(copy 118)
    tm.set-wday(copy 5)
    tm.set-yday(copy 321)
    tm.set-isdst(copy false)
    tm.set-isdst(copy true)


test test-asctime()
    var time.Time tm
    set-time(user tm)
    var String{256} result
    tm.asctime(user result)!
    assert! result.equal(user "good")


test test-strftime()
    var time.Time tm
    set-time(user tm)
    var String{256} result
    var Uint32 length
    tm.strftime(user result, user "AB")->(var length)
    assert! result.equal(user "OK")
    assert! length = result.length()


test test-mktime()
    var time.Time tm
    set-time(user tm)
    var time.Timer timer
    time-value := 2233
    timer.mktime(user tm)
    var String{256} result
    timer.ctime(user result)!
    assert! result.equal(user "good")


test test-gmtime()
    var time.Timer timer
    time-value := 3004
    timer.time()
    var time.Time tm
    timer.gmtime(user tm)!
    assert! tm.get-sec() = 43
    assert! tm.get-min() = 54
    assert! tm.get-hour() = 21
    assert! tm.get-mday() = 28
    assert! tm.get-mon() = 11
    assert! tm.get-year() = 118
    assert! tm.get-wday() = 5
    assert! tm.get-yday() = 321
    assert! tm.get-isdst() = 1


test test-localtime()
    var time.Timer timer
    time-value := 3005
    timer.time()
    var time.Time tm
    timer.localtime(user tm)!
    assert! tm.get-sec() = 43
    assert! tm.get-min() = 54
    assert! tm.get-hour() = 18
    assert! tm.get-mday() = 28
    assert! tm.get-mon() = 11
    assert! tm.get-year() = 118
    assert! tm.get-wday() = 5
    assert! tm.get-yday() = 321
    assert! tm.get-isdst() = 1
